@using hr_application.ViewModels;
@{ 
    var jobOffer = ViewData["JobOfferDetails"] as JobOfferDetailsViewModel;
}

<div class="card">
    <div class="card-header">
        <h4>@jobOffer.JobTitle</h4>
    </div>
    <div class="card-body">
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @jobOffer.Description
        </dd>
        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            @jobOffer.Salary
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @jobOffer.Location
        </dd>
        <dt class="col-sm-2">
            Expiration Date
        </dt>
        <dd class="col-sm-10">
            @jobOffer.ExpirationDate.ToString("dd/MM/yyyy")
        </dd>
    </dl> 
    </div>
</div>
